
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <input type="hidden" id="CityID" />
</div>
<!-- Modal -->
<div class="modal fade" id="myCModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5>City Information</h5> <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true"><i class="fa fa-close"></i></span> </button>
            </div>
            <div class="modal-body">
                <div class="row g-0">
                    <div class="col-md-12 border-right">
                        <div class="status p-3">
                            <div class="form-group">
                                <label>Country</label>
                                <div class="Countries"></div>

                            </div>
                            <div class="form-group">
                                <label>City</label>
                                <input type="text" class="form-control input1" id="CityName" placeholder="Please enter CityName here......" />
                            </div>
                            <div class="form-group">

                                <button onclick="CityAdd();" id="btnAdd" class="btn  btn-primary " type="submit"><i class="fa fa-send-o"><strong>Submit</strong></i></button>

                                <button type="button" class="btn  btn-primary " id="btnUpdate" style="display:none;" onclick="CityAdd();"><i class="fa fa-send-o"><strong>Update</strong></i></button>

                                <button class="btn  btn-warning " type="reset"><i class="fa fa-refresh "><strong>Reset</strong></i></button>


                                @*<button type="button" class="btn btn-danger float-right m-t-n-xs" data-dismiss="modal"><i class="fa fa-close"><strong>  Close</strong></i></button>*@

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_CityDetails")

<div class="fa fa-edit"></div>
<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
<script src="~/Scripts/CustomJavascript/Country.js"></script>
<script src="~/Scripts/CustomJavascript/City.js"></script>
