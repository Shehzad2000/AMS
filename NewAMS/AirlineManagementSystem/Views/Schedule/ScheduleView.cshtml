
@{
    ViewBag.Title = "ScheduleView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .input1 {
        border-radius: 6px;
        border: 1px #9C27B0 solid;
    }
</style>


<!-- Button trigger modal -->
<div class="container-fluid">
    <input type="hidden" id="ScheduleID" />
</div>
<!-- Modal -->
<div class="modal fade" id="myCModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Schedule Information</h5> <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true"><i class="fa fa-close"></i></span> </button>
            </div>
            <div class="modal-body">
                <div class="row g-0">
                    <div class="col-md-6 border-right">
                        <div class="status p-3">
                            <div class="form-group">
                                <label>Route</label>
                                <div class="RouteInfo"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 border-right">
                        <div class="status p-3">
                            <div class="form-group">
                                <label>AirLine</label>
                                <div class="AirLines"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row g-0">
                    <div class="col-md-6 border-right">
                        <div class="status p-3">
                            <div class="form-group">
                                <label>DepartureTime</label>
                                <input type="time" id="DepartureTime" class="form-control input1" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 border-right">
                        <div class="status p-3">
                            <div class="form-group">
                                <label>ArrivalTime</label>
                                <input type="time" id="ArrivalTime" class="form-control input1" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row g-0">
                    <div class="col-md-6 border-right">
                        <div class="status p-3">
                            <div class="form-group">
                                <label>Date</label>
                                <input type="date" id="Date" class="form-control input1" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 border-right">
                        <div class="status p-3">
                            <div class="form-group">
                                <label>Status</label>
                                <select id="Status" class="form-control input1">
                                    <option value="-1">--- Select Status---</option>
                                    <option value="1">Active</option>
                                    <option value="0">InActive</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <button onclick="ScheduleAddOrUpdate();" id="btnAdd" class="btn  btn-primary " type="submit"><i class="fa fa-send-o"><strong>Submit</strong></i></button>

                    <button type="button" class="btn  btn-primary " id="btnUpdate" style="display:none;" onclick="ScheduleAddOrUpdate();"><i class="fa fa-send-o"><strong>Update</strong></i></button>

                    <button class="btn  btn-warning " type="reset"><i class="fa fa-refresh "><strong>Reset</strong></i></button>


                    @*<button type="button" class="btn btn-danger float-right m-t-n-xs" data-dismiss="modal"><i class="fa fa-close"><strong>  Close</strong></i></button>*@

                </div>
            </div>
        </div>

    </div>
</div>

@Html.Partial("_ScheduleDetails")
<script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>

